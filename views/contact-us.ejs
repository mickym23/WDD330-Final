<%- include('includes/header.ejs') %>
<main class="contact-main">
   <h1>Contact Us</h1>
   <h2>We'd love to hear from you!</h2>

   <form action="/contact" method="post">
      <label for="fname">First Name: <input minlength="2" type="text" name="fname" id="fname" autofocus required></label><br>
      <label for="lname">Last Name: <input type="text" name="lname" id="lname" required></label><br>
      <label for="email">Email Address: <input type="email" name="email" id="email" required></label>

      <button type="submit">Submit!</button>
   </form>
  

</main>
